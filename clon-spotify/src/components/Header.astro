---
import { Icon } from 'astro-icon/components'
---

<header>
    <div class="flex justify-between items-center">
        <div class="flex justify-center w-[70px]">
            <img src="https://res.cloudinary.com/dvqrpmnur/image/upload/v1725332635/Spotify_Icon_RGB_White_ngisp3.png" alt="Spotify Icon" class="h-8 w-8 cursor-pointer">
        </div>
        <div class="flex justify-center items-center gap-2">
            <a class="bg-spotify-gray rounded-full p-3 cursor-pointer transition-transform hover:scale-105" href="">
                <Icon name="carbon:home" class="text-spotify-light-gray h-6 w-6"/>
            </a>
            <div class="flex justify-between bg-spotify-gray w-[475px] rounded-full text-spotify-light-gray p-3 font-semibold cursor-pointer transition-colors group hover:bg-spotify-hover-gray">
                <div class="flex items-center gap-3">
                    <Icon name="carbon:search" class="group-hover:text-white h-6 w-6"/>
                    <p>What do you want to play?</p>
                </div>
                <div class="flex gap-2">
                    <div class="border-l border-gray-500 h-6"></div>
                    <Icon name="carbon:media-library" class="transition-transform hover:scale-105 hover:text-white h-6 w-6"/>
                </div>
            </div>  
        </div>
        <div class="flex justify-center items-center gap-6">
            <div>
                <Icon name="carbon:notification" class="text-spotify-light-gray h-5 w-5 cursor-pointer transition-colors hover:text-white hover:scale-105"/>
            </div>
            <img src="https://res.cloudinary.com/dvqrpmnur/image/upload/v1725331939/02abd6d9e7bd7881724e72f9d74fb038_jubbo3.jpg" alt="User Profile" class="border-8 border-spotify-gray rounded-full h-12 w-12 cursor-pointer transition-transform hover:scale-105">
        </div>
    </div>
</header>